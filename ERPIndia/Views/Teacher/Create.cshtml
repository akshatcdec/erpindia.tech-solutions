                                    @Html.LabelFor(m => m.Leaves.MedicalLeaves, "Medical Leaves", new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Leaves.MedicalLeaves, new { @class = "form-control numeric-only", placeholder = "0", Value = "0" })
                                </div>
