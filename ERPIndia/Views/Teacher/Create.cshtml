                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label required">Time-Out</label>
                                    @Html.TextBoxFor(m => m.Basic.TimeOut, new { @class = "form-control", type = "time", Value = "17:00", required = "required" })
