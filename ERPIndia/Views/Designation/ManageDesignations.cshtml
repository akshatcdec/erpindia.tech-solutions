@using ERPIndia
@{
    ViewBag.Title = "Designation Management";
}
<div class="card">
    <div class="card-header bg-light">
        <div class="d-flex align-items-center">
            <h5 class="text-dark">Designation Management</h5>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-xxl-4 col-xl-4">
                <div class="card">
                    <div class="card-header bg-light">
                        <div class="d-flex align-items-center">
                            <h5 class="text-dark">Manage Designation</h5>
                        </div>
                    </div>
                    <div class="card-body">
                        <form id="designationForm" class="new-added-form">
                            <div class="row">
                                <input type="hidden" id="designationId">
                                <div class="col-xl-12 col-lg-12 col-12 form-group">
                                    <label>Designation Name *</label>
                                    <input type="text" id="designationName" placeholder="" autocomplete="off" class="form-control required">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12 col-lg-12 col-12 form-group">
                                    <label>Designation Code</label>
                                    <input type="text" id="designationCode" placeholder="" autocomplete="off" class="form-control">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12 col-lg-12 col-12 form-group">
                                    <label>Department</label>
                                    <select id="departmentId" class="form-control">
                                        <option value="">-- None --</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-6 col-lg-6 col-12 form-group">
                                    <label>Level</label>
                                    <input type="number" id="level" placeholder="" min="1" max="10" class="form-control">
                                </div>
                                <div class="col-xl-6 col-lg-6 col-12 form-group">
                                    <label>Sort Order</label>
                                    <input type="number" id="sortOrder" placeholder="0" value="0" min="0" class="form-control">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12 col-lg-12 col-12 form-group">
                                    <label>Description</label>
                                    <textarea id="description" placeholder="" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12 col-lg-12 col-12 form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="isActive" checked>
                                        <label class="form-check-label" for="isActive">
                                            Active
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12 col-lg-12 col-12 form-group">
                                    <br />
                                    <div class="btn-group" role="group">
                                        <button type="submit" id="submitBtn" class="btn btn-primary">Save</button>&nbsp;
                                        <button type="button" id="cancelBtn" class="btn btn-secondary">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xxl-8 col-xl-8">
                <div class="card">
                    <div class="card-header bg-light">
                        <div class="d-flex align-items-center">
                            <h5 class="text-dark">Designations List</h5>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped" id="designationDatatable">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Designation Name</th>
                                        <th>Designation Code</th>
                                        <th>Department</th>
                                        <th>Level</th>
                                        <th>Sort Order</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Data will be populated here -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>

<script>
const DesignationManager = (function() {
    const apiEndpoints = {
        getAll: '@Url.Action("GetAllDesignations", "Designation")',
        getById: '@Url.Action("GetDesignationById", "Designation")',
        create: '@Url.Action("InsertDesignation", "Designation")',
        update: '@Url.Action("UpdateDesignation", "Designation")',
        delete: '@Url.Action("DeleteDesignation", "Designation")',
        getNextSortOrder: '@Url.Action("GetNextSortOrder", "Designation")',
        getDepartments: '@Url.Action("GetDepartments", "Designation")'
    };

    const elements = {
        form: '#designationForm',
        idField: '#designationId',
        submitBtn: '#submitBtn',
        cancelBtn: '#cancelBtn',
        datatable: '#designationDatatable',
        requiredFields: '.required'
    };

    let dataTable = null;

    const initializeDataTable = function () {
        dataTable = $(elements.datatable).DataTable({
            "processing": true,
            "serverSide": true,
            "filter": true,
            "ajax": {
                "url": apiEndpoints.getAll,
                "type": "POST",
                "datatype": "json",
                "error": function (xhr, error, thrown) {
                    console.error("DataTable AJAX error:", error, thrown);
                    Notification.show("Failed to load designation data.", "error");
                }
            },
            "columnDefs": [{
                "targets": [0],
                "visible": false,
                "searchable": false
            }],
            "columns": [
                { data: 'DesignationID', visible: false },
                { "data": "DesignationName", "name": "DesignationName", "autoWidth": true },
                { "data": "DesignationCode", "name": "DesignationCode", "autoWidth": true },
                {
                    "data": "DepartmentName",
                    "name": "DepartmentName",
                    "autoWidth": true,
                    "render": function (data) {
                        return data || '<span class="text-muted">None</span>';
                    }
                },
                {
                    "data": "Level",
                    "name": "Level",
                    "autoWidth": true,
                    "render": function (data) {
                        return data || '<span class="text-muted">-</span>';
                    }
                },
                { "data": "SortOrder", "name": "SortOrder", "autoWidth": true },
                {
                    "data": "IsActive",
                    "name": "IsActive",
                    "autoWidth": true,
                    "render": function (data) {
                        return data ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-danger">Inactive</span>';
                    }
                },
                {
                    data: null,
                    orderable: false,
                    className: 'text-center',
                    width: "100px",
                    render: function (data, type, row) {
                        return `
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-primary btn-sm edit-btn" data-id="${row.DesignationID}" title="Edit">
                                    <i class="fa fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-danger btn-sm delete-btn" data-id="${row.DesignationID}" title="Delete">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                        `;
                    }
                },
            ],
            "order": [[5, "asc"]],
            responsive: true,
            dom: "<'row'<'col-sm-6'B><'col-sm-3'l><'col-sm-3'f>>" +
                "<'row'<'col-sm-12'tr>>" +
                "<'row'<'col-sm-5'i><'col-sm-7'p>>",
            lengthMenu: [[10, 25, 50, 100], [10, 25, 50, 100]],
            buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
        });
    };

    const loadDepartments = function(selectedId = null) {
        $.ajax({
            url: apiEndpoints.getDepartments,
            type: 'GET',
            success: function(result) {
                if (result.success) {
                    const select = $('#departmentId');
                    select.empty();
                    select.append('<option value="">-- None --</option>');

                    $.each(result.data, function(index, dept) {
                        const selected = selectedId && dept.DepartmentID === selectedId ? 'selected' : '';
                        select.append(`<option value="${dept.DepartmentID}" ${selected}>${dept.DepartmentName}</option>`);
                    });
                }
            },
            error: function(xhr, status, error) {
                console.error("Error loading departments:", error);
            }
        });
    };

    const checkForDuplicate = async function (designationName, designationCode, currentId = '') {
        return new Promise((resolve, reject) => {
            $.ajax({
                url: apiEndpoints.getAll,
                type: 'GET',
                data: {
                    checkDuplicate: true,
                    designationName: designationName,
                    designationCode: designationCode
                },
                success: function (result) {
                    if (result.success) {
                        const isDuplicate = result.data.some(item => {
                            return (item.DesignationName.toLowerCase() === designationName.toLowerCase() ||
                                   (designationCode && item.DesignationCode && item.DesignationCode.toLowerCase() === designationCode.toLowerCase())) &&
                                   item.DesignationID.toString() !== currentId.toString();
                        });
                        resolve(isDuplicate);
                    } else {
                        reject(result.message || 'Error checking for duplicates');
                    }
                },
                error: function (xhr, status, error) {
                    reject(error);
                }
            });
        });
    };

    const getFormData = function () {
        const departmentId = $('#departmentId').val();
        const level = $('#level').val();
        return {
            DesignationID: $('#designationId').val(),
            DesignationName: $('#designationName').val().trim(),
            DesignationCode: $('#designationCode').val().trim(),
            Description: $('#description').val().trim(),
            DepartmentID: departmentId ? departmentId : null,
            Level: level ? parseInt(level) : null,
            SortOrder: parseInt($('#sortOrder').val()) || 0,
            IsActive: $('#isActive').is(':checked')
        };
    };

    const bindEvents = function() {
        $(elements.form).on('submit', async function(e) {
            e.preventDefault();
            $(elements.submitBtn).prop('disabled', true);

            try {
                const isValid = await validateForm();
                if (isValid) {
                    saveDesignation();
                } else {
                    $(elements.submitBtn).prop('disabled', false);
                }
            } catch (error) {
                console.error("Validation error:", error);
                Notification.show("An error occurred during validation.", "error");
                $(elements.submitBtn).prop('disabled', false);
            }
        });

        $(elements.cancelBtn).on('click', resetForm);

        $(elements.datatable).on('click', '.edit-btn', function() {
            const designationId = $(this).data('id');
            loadDesignationForEdit(designationId);
        });

        $(elements.datatable).on('click', '.delete-btn', function() {
            const designationId = $(this).data('id');
            confirmDelete(designationId);
        });
    };

    const validateForm = async function() {
        let isValid = true;

        $(elements.requiredFields).removeClass('is-invalid').next('.invalid-feedback').remove();

        $(elements.requiredFields).each(function() {
            if (!$(this).val().trim()) {
                isValid = false;
                $(this).addClass('is-invalid');
                $(this).after(`<div class="invalid-feedback">This field is required</div>`);
            }
        });

        // Validate level if provided
        const level = $('#level').val();
        if (level && (parseInt(level) < 1 || parseInt(level) > 10)) {
            isValid = false;
            $('#level').addClass('is-invalid');
            $('#level').after(`<div class="invalid-feedback">Level must be between 1 and 10</div>`);
        }

        if (isValid) {
            try {
                const designationName = $('#designationName').val().trim();
                const designationCode = $('#designationCode').val().trim();
                const currentId = $(elements.idField).val();

                const isDuplicate = await checkForDuplicate(designationName, designationCode, currentId);

                if (isDuplicate) {
                    isValid = false;
                    $('#designationName, #designationCode').addClass('is-invalid');
                    $('#designationName').after(`<div class="invalid-feedback">Designation name or code already exists</div>`);
                }
            } catch (error) {
                console.error("Error checking for duplicates:", error);
            }
        }

        return isValid;
    };

    const resetForm = function() {
        $('#designationName, #designationCode, #description').val('');
        $('#level').val('');
        $('#sortOrder').val('0');
        $('#departmentId').val('');
        $('#isActive').prop('checked', true);
        $(elements.idField).val('');
        $(elements.submitBtn).text('Save');
        $(elements.requiredFields).removeClass('is-invalid').next('.invalid-feedback').remove();
        loadDepartments();
        getNextSortOrder();
    };

    const getNextSortOrder = function() {
        $.ajax({
            url: apiEndpoints.getNextSortOrder,
            type: 'GET',
            success: function(result) {
                if (result.success) {
                    $('#sortOrder').val(result.nextSortOrder);
                }
            }
        });
    };

    const saveDesignation = function() {
        const designation = getFormData();
        const isUpdate = designation.DesignationID !== '';

        if (isUpdate) {
            performAjaxOperation(apiEndpoints.update, designation, 'updating');
        } else {
            performAjaxOperation(apiEndpoints.create, designation, 'creating');
        }
    };

    const loadDesignationForEdit = function(id) {
        $.ajax({
            url: apiEndpoints.getById,
            type: 'GET',
            data: { id: id },
            success: function(result) {
                if (result.success && result.data) {
                    const designation = result.data;

                    $(elements.idField).val(designation.DesignationID);
                    $('#designationName').val(designation.DesignationName);
                    $('#designationCode').val(designation.DesignationCode || '');
                    $('#description').val(designation.Description || '');
                    $('#level').val(designation.Level || '');
                    $('#sortOrder').val(designation.SortOrder);
                    $('#isActive').prop('checked', designation.IsActive);

                    // Load departments with selected value
                    loadDepartments(designation.DepartmentID);

                    $(elements.submitBtn).text('Update');

                    $('html, body').animate({
                        scrollTop: $(elements.form).offset().top - 100
                    }, 500);
                } else {
                    Notification.show('Designation not found.', 'error');
                }
            },
            error: function(xhr, status, error) {
                console.error('Error fetching designation data:', error);
                Notification.show('An error occurred while fetching designation data.', 'error');
            }
        });
    };

    const confirmDelete = function(id) {
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this designation!",
            icon: "warning",
            buttons: ["Cancel", "Delete"],
            dangerMode: true,
        })
        .then((willDelete) => {
            if (willDelete) {
                deleteDesignation(id);
            }
        });
    };

    const deleteDesignation = function(id) {
        performAjaxOperation(apiEndpoints.delete, { id: id }, 'deleting');
    };

    const performAjaxOperation = function(url, data, operationType) {
        $.ajax({
            url: url,
            type: 'POST',
            data: data,
            cache: false,
            beforeSend: function() {
                $(elements.submitBtn).prop('disabled', true);
                $(elements.cancelBtn).prop('disabled', true);
            },
            success: function(result) {
                if (result.success) {
                    if (operationType !== 'deleting') {
                        resetForm();
                    }
                    refreshDataTable();
                    Notification.show(result.message, 'success');
                } else {
                    Notification.show(result.message || `Failed while ${operationType} the designation.`, 'error');
                }
            },
            error: function(xhr, status, error) {
                console.error(`${operationType} error:`, error);
                Notification.show(`An error occurred while ${operationType} the designation.`, 'error');
            },
            complete: function() {
                $(elements.submitBtn).prop('disabled', false);
                $(elements.cancelBtn).prop('disabled', false);
            }
        });
    };

    const refreshDataTable = function() {
        if (dataTable) {
            dataTable.ajax.reload();
            return;
        }

        if ($.fn.DataTable.isDataTable(elements.datatable)) {
            $(elements.datatable).DataTable().ajax.reload();
        }
    };

    return {
        init: function() {
            initializeDataTable();
            bindEvents();
            loadDepartments();
            getNextSortOrder();
        }
    };
})();

const Notification = (function() {
    return {
        show: function(message, type) {
            swal({
                title: type === 'success' ? 'Success!' : 'Error!',
                text: message,
                icon: type,
                button: "OK",
            });
        }
    };
})();

$(document).ready(function() {
    DesignationManager.init();
});
</script>

<style>
    .invalid-feedback {
        display: block;
        color: #dc3545;
        font-size: 80%;
        margin-top: 0.25rem;
    }

    .is-invalid {
        border-color: #dc3545;
    }

    div.dataTables_wrapper div.dataTables_filter {
        text-align: right;
    }

    div.dt-buttons {
        margin-bottom: 10px;
    }

    .dataTables_length {
        padding-top: 5px;
    }

    .dt-button {
        padding: 5px 10px;
        margin-right: 5px;
        border: 1px solid #ddd;
        background-color: #f8f8f8;
        color: #333;
        border-radius: 4px;
    }

        .dt-button:hover {
            background-color: #e8e8e8;
        }
</style>
