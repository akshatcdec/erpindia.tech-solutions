@model ERPK12Models.DTO.Acc.NoticeListViewModel
@{
    ViewBag.Title = "Notice Board";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Notice Board</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                <li class="breadcrumb-item active">Notice Board</li>
            </ul>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Notice
            </a>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <input type="text" id="searchInput" class="form-control" placeholder="Search notices..." value="@Model.SearchTerm">
                    </div>
                    <div class="col-md-4">
                        <select id="filterType" class="form-control">
                            <option value="All">All Types</option>
                            <option value="Instruction" @(Model.FilterType == "Instruction" ? "selected" : "")>Instruction</option>
                            <option value="Event" @(Model.FilterType == "Event" ? "selected" : "")>Event</option>
                            <option value="Notification" @(Model.FilterType == "Notification" ? "selected" : "")>Notification</option>
                            <option value="Preparation" @(Model.FilterType == "Preparation" ? "selected" : "")>Preparation</option>
                            <option value="Schedule" @(Model.FilterType == "Schedule" ? "selected" : "")>Schedule</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button id="searchBtn" class="btn btn-primary btn-block">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>
                </div>

                <div id="noticeListContainer">
                    @Html.Partial("_NoticeList", Model)
                </div>
            </div>
        </div>
    </div>
</div>


    <script>
        $(document).ready(function () {
            // Search functionality
            $('#searchBtn').click(function () {
                loadNotices(1);
            });

            $('#searchInput').keypress(function (e) {
                if (e.which == 13) {
                    loadNotices(1);
                }
            });

            $('#filterType').change(function () {
                loadNotices(1);
            });

            // Toggle status
            $(document).on('click', '.toggle-status', function () {
                var noticeId = $(this).data('id');
                var $this = $(this);

                $.post('@Url.Action("ToggleStatus")', { id: noticeId }, function (response) {
                    if (response.success) {
                        if (response.isActive) {
                            $this.removeClass('btn-danger').addClass('btn-success');
                            $this.html('<i class="fas fa-check"></i> Active');
                        } else {
                            $this.removeClass('btn-success').addClass('btn-danger');
                            $this.html('<i class="fas fa-times"></i> Inactive');
                        }
                    }
                });
            });

            // Pagination
            $(document).on('click', '.pagination a', function (e) {
                e.preventDefault();
                var page = $(this).data('page');
                loadNotices(page);
            });
        });

        function loadNotices(page) {
            var searchTerm = $('#searchInput').val();
            var filterType = $('#filterType').val();

            $.get('@Url.Action("Index")', {
                searchTerm: searchTerm,
                filterType: filterType,
                page: page
            }, function (data) {
                $('#noticeListContainer').html(data);
            });
        }
    </script>
