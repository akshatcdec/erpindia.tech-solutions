@model  ERPK12Models.DTO.Acc.NoticeViewModel
@{
    ViewBag.Title = "Delete Notice";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Delete Notice</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Notice Board</a></li>
                <li class="breadcrumb-item active">Delete</li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h4 class="text-danger">Are you sure you want to delete this notice?</h4>
                <div class="notice-details mt-4">
                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Type</dt>
                        <dd class="col-sm-9">@Model.NoticeType</dd>

                        <dt class="col-sm-3">Published Date</dt>
                        <dd class="col-sm-9">@Model.PublishedDate.ToString("dd MMM yyyy")</dd>

                        <dt class="col-sm-3">Published By</dt>
                        <dd class="col-sm-9">@Model.PublishedBy</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    </dl>
                </div>

                @using (Html.BeginForm("Delete", "Notice", new { id = Model.NoticeId }, FormMethod.Post, new { @class = "mt-4" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
