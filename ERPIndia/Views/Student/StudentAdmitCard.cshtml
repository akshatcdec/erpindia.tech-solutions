@model ERPIndia.Models.CollectFee.DTOs.FeeCollectionSearchRequest
<link href="/Content/model.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        Admit Card
                    </h5>
                </div>
                <div class="card-body">
                    <div id="validationMessage" class="alert alert-warning d-none">
                        Please select all required fields before searching.
                    </div>
                    <form id="searchForm" class="needs-validation" novalidate>
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label for="SelectedClass" class="form-label">Class <span class="text-danger">*</span></label>
                                @Html.DropDownListFor(m => m.SelectedClass, Model.ClassList, new { @class = "form-control", required = "required" })
                                <div class="invalid-feedback">
                                    Please select a class.
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label for="SelectedSection" class="form-label">Section</label>
                                @Html.DropDownListFor(m => m.SelectedSection, Model.SectionList, new { @class = "form-control" })
                                <div class="invalid-feedback">
                                    Please select a section.
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label for="SelectedExam" class="form-label">Exam <span class="text-danger">*</span></label>
                                @Html.DropDownListFor(m => m.SelectedExam, Model.ExamList, new { @class = "form-control", required = "required" })
                                <div class="invalid-feedback">
                                    Please select an exam.
                                </div>
                            </div>
                            <div class="col-md-3 align-self-end">
                                <div class="d-grid gap-2">
                                    <button type="button" onclick="GetDetails();" class="btn btn-primary">
                                        <i class="fas fa-search me-2"></i>Search
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
   function GetDetails() {
    var selectedClass = $('#SelectedClass').val();
    var selectedExam = $('#SelectedExam').val();
       var selectedSection = $('#SelectedSection').val();
    // Clear previous messages
    $('#validationMessage').addClass('d-none');

    // Validate selections (check for empty GUIDs)
    if (!selectedClass || selectedClass === '00000000-0000-0000-0000-000000000000' ||
        !selectedExam || selectedExam === '00000000-0000-0000-0000-000000000000') {
        $('#validationMessage').removeClass('d-none');
        return;
    }

    var url = '@Url.Action("StudentAdmitCardPrint", "Student")' +
              '?classId=' + encodeURIComponent(selectedClass) +
              '&sectionId=' + encodeURIComponent(selectedSection) +
              '&examId=' + encodeURIComponent(selectedExam);
    openModal('-1', url,'', 'AdmitCard');
}
</script>
