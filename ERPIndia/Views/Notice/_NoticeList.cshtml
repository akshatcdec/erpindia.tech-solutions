@model  ERPK12Models.DTO.Acc.NoticeListViewModel
<div class="table-responsive">
    <table class="table table-hover table-center mb-0">
        <thead>
            <tr>
                <th>Title</th>
                <th>Type</th>
                <th>Published Date</th>
                <th>Published By</th>
                <th>Days Ago</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var notice in Model.Notices)
            {
                <tr>
                    <td>
                        <h6 class="mb-0">@notice.Title</h6>
                        <small class="text-muted">@Html.Raw(notice.Description.Length > 50 ? notice.Description.Substring(0, 50) + "..." : notice.Description)</small>
                    </td>
                    <td>
                        <span class="badge @notice.TypeBadgeClass">@notice.NoticeType</span>
                    </td>
                    <td>@notice.PublishedDate.ToString("dd MMM yyyy")</td>
                    <td>@notice.PublishedBy</td>
                    <td>
                        <span class="badge badge-light">
                            <i class="far fa-clock"></i> @notice.DaysAgo days
                        </span>
                    </td>
                    <td>
                        <button class="btn btn-sm toggle-status @(notice.IsActive ? "btn-success" : "btn-danger")" data-id="@notice.NoticeId">
                            @if (notice.IsActive)
                            {
                                <i class="fas fa-check"></i> @:Active
                            }
                            else
                            {
                                <i class="fas fa-times"></i> @:Inactive
                            }
                        </button>
                    </td>
                    <td>
                        <div class="actions">
                            <a href="@Url.Action("Details", new { id = notice.NoticeId })" class="btn btn-sm bg-info-light">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="@Url.Action("Edit", new { id = notice.NoticeId })" class="btn btn-sm bg-warning-light">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Delete", new { id = notice.NoticeId })" class="btn btn-sm bg-danger-light">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 1)
{
    <div class="row mt-3">
        <div class="col-md-12">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" href="#" data-page="@(Model.PageNumber - 1)">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                            <a class="page-link" href="#" data-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="#" data-page="@(Model.PageNumber + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
}
