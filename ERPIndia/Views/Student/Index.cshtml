@model IEnumerable<ERPIndia.StudentManagement.Models.StudentBasic>
@{
    ViewBag.Title = ViewBag.ViewType == "Active" ? "Students" : "Discontinued Students";
    var isActiveView = ViewBag.ViewType == "Active";
}
<link href="/Content/model.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <span class="bg-white avatar avatar-sm me-2 text-gray-7 flex-shrink-0">
                            <i class="fas fa-graduation-cap fs-16"></i>
                        </span>
                        <h4 class="text-dark mb-0">@ViewBag.Title</h4>
                    </div>
                    <div>
                        @if (isActiveView)
                        {
                            <a class="btn btn-success" style="display:none" href="@Url.Action("","ImportData")">
                                Import Data
                            </a>
                            <a href="@Url.Action("Create")" class="btn" style="background-color: #003366; color: white;">
                                <i class="fas fa-user-plus me-1"></i>Add Student
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show d-flex align-items-center">
                        <i class="fas fa-check-circle me-2" style="font-size: 1.2em;"></i>
                        <div class="flex-grow-1">
                            @TempData["SuccessMessage"]
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle me-2" style="font-size: 1.2em;"></i>
                        <div class="flex-grow-1">
                            @TempData["ErrorMessage"]
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <!-- Filter Form -->
                <div class="card mb-3">
                    <div class="card-body">
                        @using (Html.BeginForm("Index", "Student", FormMethod.Get, new { id = "filterForm", @class = "row g-3" }))
                        {
                            <!-- Hidden field to maintain the view type -->
                            <input type="hidden" name="viewType" value="@ViewBag.ViewType" />

                            <div class="col-md-4">
                                <label for="ClassId" class="form-label">Class</label>
                                @Html.DropDownList("ClassId",
                                    ViewBag.Classes as IEnumerable<SelectListItem>,
                                    "-- All Classes --",
                                    new { @class = "form-select", id = "ClassId" })
                            </div>

                            <div class="col-md-4">
                                <label for="SectionId" class="form-label">Section</label>
                                @Html.DropDownList("SectionId",
                                    ViewBag.Sections as IEnumerable<SelectListItem>,
                                    "-- All Sections --",
                                    new { @class = "form-select", id = "SectionId" })
                            </div>

                            <div class="col-md-4 align-self-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-filter me-2"></i>Apply Filter
                                </button>
                                <a href="@Url.Action("Index", new { viewType = ViewBag.ViewType })" class="btn btn-outline-secondary">
                                    <i class="fas fa-redo me-2"></i>Reset
                                </a>
                            </div>
                        }
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-striped" id="studentlist">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.AdmsnNo)</th>
                                <th>@Html.DisplayNameFor(model => model.RollNo)</th>
                                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                                <th>Father</th>
                                <th>Class</th>
                                <th>Sec</th>
                                <th>Fee Cat</th>
                                <th>@Html.DisplayNameFor(model => model.Gender)</th>
                                <th>@Html.DisplayNameFor(model => model.Mobile)</th>
                                <th>@Html.DisplayNameFor(model => model.Status)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.AdmsnNo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.RollNo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FatherName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ClassName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SectionName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Mobile)</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li style="display:none">
                                                    <a class="dropdown-item" href="@Url.Action("Details", new { id = item.StudentID })">
                                                        <i class="fa fa-address-card me-2" style="color: #6c757d;"></i>
                                                        View Details
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("Edit", new { id = item.StudentID })">
                                                        <i class="fas fa-edit me-2" style="color: #28a745;"></i>
                                                        Edit Student
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="javascript:void(0)"
                                                       onclick="openModal('@item.AdmsnNo', '@Url.Action("GenerateAdmissionForm", "StudentProfile", new { id = item.AdmsnNo })', 'Student', 'admission')">
                                                        <i class="fa-solid fa-print me-2" style="color: #003366;"></i>
                                                        Print Form
                                                    </a>
                                                </li>
                                                @if (isActiveView)
                                                {
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <a class="dropdown-item text-danger" href="@Url.Action("Delete", new { id = item.StudentID })"
                                                           onclick="return confirm('Are you sure you want to delete this student?')">
                                                            <i class="fa-solid fa-trash-can me-2" style="color: #dc3545;"></i>
                                                            Delete Student
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        // Initialize DataTable
        var table = $('#studentlist').DataTable({
            "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
            "pageLength": 10,
            "order": [[0, "asc"]], // Order by receipt number descending
            "dom": 'Blfrtip',
            "buttons": [
                {
                    extend: 'copy',
                    className: 'btn btn-sm btn-secondary'
                },
                {
                    extend: 'csv',
                    className: 'btn btn-sm btn-secondary'
                },
                {
                    extend: 'excel',
                    className: 'btn btn-sm btn-secondary'
                },
                {
                    extend: 'pdf',
                    title: 'Student',
                    className: 'btn btn-sm btn-secondary',
                    orientation: 'landscape'
                },
                {
                    extend: 'print',
                    className: 'btn btn-sm btn-secondary'
                }
            ]
        });
    });
    $(document).ready(function () {
        // Handle class selection change
        $('#ClassId').change(function() {
            var classId = $(this).val();
            var sectionDropdown = $('#SectionId');

            // Reset sections dropdown if no class is selected
            if (!classId || classId === '') {
                // Keep the default "All Sections" option and clear the rest
                // This assumes the first option is the "All Sections" option
                sectionDropdown.find('option:not(:first)').remove();
                return;
            }

            // Get sections for selected class
            $.ajax({
                url: '@Url.Action("GetSectionsByClass", "Student")',
                type: 'GET',
                data: { classId: classId },
                success: function(sections) {
                    // Keep the default "All Sections" option and clear the rest
                    sectionDropdown.find('option:not(:first)').remove();

                    // Add the new sections
                    $.each(sections, function(i, section) {
                        sectionDropdown.append($('<option></option>').val(section.Value).text(section.Text));
                    });
                },
                error: function() {
                    console.error('Failed to load sections');
                }
            });
        });
    });
</script>