@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}
<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Forgot Password | School Management Software</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/img/erplogo.png" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />
    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- SweetAlert CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    <!-- Animate CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script>
        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }
    </script>
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #fff;
            z-index: 9999;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

            .preloader .inner {
                text-align: center;
            }

        #loader {
            width: 50px;
            height: 50px;
            border: 3px solid #f3f3f3;
            border-top: 3px solid #667eea;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .login-page-wrap {
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 20px 0;
        }

        .forgotPassWrap {
            background: white;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            max-width: 500px;
            margin: 0 auto;
        }

        .compname {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }

        .option-card {
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 25px;
            margin: 15px 0;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
        }

            .option-card:hover {
                border-color: #667eea;
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.2);
                transform: translateY(-2px);
            }

            .option-card.active {
                border-color: #667eea;
                background: #f8f9ff;
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
            }

            .option-card .icon {
                font-size: 2.5rem;
                color: #667eea;
                margin-bottom: 15px;
            }

            .option-card h5 {
                color: #333;
                margin-bottom: 10px;
            }

            .option-card p {
                color: #6c757d;
                margin: 0;
                font-size: 14px;
            }

        .form-section {
            display: none;
            animation: fadeIn 0.5s ease-in;
        }

            .form-section.active {
                display: block;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-group {
            margin-bottom: 25px;
        }

            .form-group label {
                font-weight: 600;
                color: #333;
                margin-bottom: 8px;
                display: block;
            }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 12px 15px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            }

            .form-control.is-invalid {
                border-color: #dc3545;
            }

        .invalid-feedback {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 0.25rem;
        }

        .input-group-text {
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            border-right: none;
        }

        .input-group .form-control {
            border-left: none;
        }

        .input-group:focus-within .input-group-text {
            border-color: #667eea;
            background: #f8f9ff;
        }

        .btn-gradient-yellow {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

            .btn-gradient-yellow:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
                color: white;
            }

            .btn-gradient-yellow:disabled {
                opacity: 0.7;
                cursor: not-allowed;
            }

        .btn-outline-secondary {
            border: 2px solid #6c757d;
            color: #6c757d;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-outline-secondary:hover {
                background: #6c757d;
                color: white;
                transform: translateY(-2px);
            }

        .loading-spinner {
            display: none;
            width: 20px;
            height: 20px;
            border: 2px solid transparent;
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-left: 10px;
        }

        .email-result {
            background: #d4edda;
            border: 1px solid #c3e6cb;
            border-radius: 8px;
            padding: 20px;
            margin: 20px 0;
            text-align: center;
        }

            .email-result .email-display {
                font-size: 18px;
                font-weight: 600;
                color: #155724;
                margin: 10px 0;
                padding: 10px;
                background: white;
                border-radius: 5px;
                word-break: break-all;
            }

        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(255,255,255,0.2);
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

            .back-btn:hover {
                background: rgba(255,255,255,0.3);
                color: white;
            }

        @@media (max-width: 768px) {
            .forgotPassWrap {
                padding: 20px;
                margin: 10px;
            }

            .option-card {
                padding: 20px;
            }

                .option-card .icon {
                    font-size: 2rem;
                }
        }
    </style>
</head>

<body>
    <!-- Preloader Start Here -->
    <div class="preloader" id="preloader">
        <div class="inner">
            <div id="loader"></div>
            <h4 class="mt-3">Loading...</h4>
        </div>
    </div>

    <!-- Login Page Start Here -->
    <div class="login-page-wrap">
        <button class="back-btn" onclick="goBack()">
            <i class="fas fa-arrow-left"></i>
        </button>

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="forgotPassWrap">
                        <!-- CSRF Token -->
                        @Html.AntiForgeryToken()

                        <!-- Header -->
                        <div class="text-center mb-4">
                            <h3 class="mb-2">Forgot Password</h3>
                            <small class="text-muted">for <a href="#" class="compname">School ERP Software</a></small>
                            <hr class="my-4" />
                        </div>

                        <!-- Option Selection -->
                        <div id="optionSelection">
                            <p class="text-center mb-4">Choose an option to recover your account:</p>

                            <div class="option-card" onclick="selectOption('email')">
                                <div class="icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <h5>I forgot my password</h5>
                                <p>Enter your registered email to receive password</p>
                            </div>

                            <div class="option-card" onclick="selectOption('schoolCode')">
                                <div class="icon">
                                    <i class="fas fa-school"></i>
                                </div>
                                <h5>I forgot my email address</h5>
                                <p>Enter your Client code to find your registered email address</p>
                            </div>
                        </div>

                        <!-- Email Option Form -->
                        <div class="form-section" id="emailSection">
                            <div class="text-center mb-4">
                                <i class="fas fa-envelope text-primary" style="font-size: 2rem;"></i>
                                <h4 class="mt-2">Reset Password</h4>
                                <p class="text-muted">Enter your registered email address</p>
                            </div>

                            <form id="emailForm">
                                <div class="form-group">
                                    <label for="email">Registered Email Address</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                        <input type="email" id="email" name="email"
                                               placeholder="Enter your email address" class="form-control" required />
                                    </div>
                                </div>

                                <div class="form-group d-grid gap-2">
                                    <button type="submit" class="btn btn-gradient-yellow">
                                        Send Password To Email <i class="fas fa-paper-plane ml-2"></i>
                                        <span class="loading-spinner" id="emailSpinner"></span>
                                    </button>
                                </div>

                                <div class="form-group d-grid gap-2">
                                    <button type="button" class="btn btn-outline-secondary" onclick="goBackToOptions()">
                                        <i class="fas fa-arrow-left mr-2"></i> Back to Options
                                    </button>
                                </div>
                            </form>
                        </div>

                        <!-- Client Code Option Form -->
                        <div class="form-section" id="schoolCodeSection">
                            <div class="text-center mb-4">
                                <i class="fas fa-school text-primary" style="font-size: 2rem;"></i>
                                <h4 class="mt-2">Find Your Email</h4>
                                <p class="text-muted">Enter your Client Code to find your registered email</p>
                            </div>

                            <form id="schoolCodeForm">
                                <div class="form-group">
                                    <label for="schoolCodeInput">Client Code</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-school"></i></span>
                                        <input type="text" id="schoolCodeInput" maxlength="10" name="schoolCode" onkeypress = "return isNumber(event)" 
                                               placeholder="Enter your Client code" class="form-control" required />
                                    </div>
                                    <small class="form-text text-muted">
                                        Client Code is provided by your institution (e.g., 87659, 69735)
                                    </small>
                                </div>

                                <div class="form-group d-grid gap-2">
                                    <button type="submit" class="btn btn-gradient-yellow">
                                        Find My Email <i class="fas fa-search ml-2"></i>
                                        <span class="loading-spinner" id="schoolSpinner"></span>
                                    </button>
                                </div>

                                <div class="form-group d-grid gap-2">
                                    <button type="button" class="btn btn-outline-secondary" onclick="goBackToOptions()">
                                        <i class="fas fa-arrow-left mr-2"></i> Back to Options
                                    </button>
                                </div>
                            </form>

                            <!-- Email Result Display -->
                            <div id="emailResult" class="email-result" style="display: none;">
                                <i class="fas fa-check-circle text-success mb-2" style="font-size: 2rem;"></i>
                                <h5>Email Address Found!</h5>
                                <p>Your registered email address is:</p>
                                <div class="email-display" id="foundEmail"></div>
                                <p class="mt-3 mb-3">Now you can use this email to reset your password.</p>
                                <button class="btn btn-gradient-yellow" onclick="useFoundEmail()">
                                    <i class="fas fa-envelope mr-2"></i> Use This Email to Reset Password
                                </button>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="text-center mt-4">
                            <p class="text-muted">
                                Remember your password?
                                <a href="@Url.Action("Login", "Account")" class="compname">Sign In</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script src="/Content/Scripts/forgetpassword.js?t=@DateTime.Now.ToLongTimeString()"></script>
</body>
</html>