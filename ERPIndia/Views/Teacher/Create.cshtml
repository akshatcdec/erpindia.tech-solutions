                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label required">Time-in</label>
                                    @Html.TextBoxFor(m => m.Basic.TimeIn, new { @class = "form-control", type = "time", Value = "09:00", required = "required" })
                                </div>
