@model string
@{
    string reportId = Model;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewBag.ReportTitle</title>
    <style>
        *, *::before, *::after {
            box-sizing: border-box;
        }
        body {
            overflow: hidden !important;
            margin: 0;
            padding: 4px;
        }
        .report-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .export-actions {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            padding: 10px;
            background-color: #f5f5f5;
            border-bottom: 1px solid #ddd;
        }

        .report-viewer {
            flex: 1;
            position: relative;
        }

        #reportFrame {
            width: 100%;
            height: 100%;
            border: none;
        }

        .student-link-excel {
            color: green;
            text-decoration: none;
            font-weight: bold;
            font-size: 16px;
        }

        .student-link-word {
            color: #2b579a;
            text-decoration: none;
            font-weight: bold;
            font-size: 16px;
        }

        .student-link-separator {
            color: #666;
            font-size: 16px;
            margin: 0 5px;
        }

        /* Optional: hide buttons if not used */
        .export-btn {
            display: none;
        }

        .alert {
            padding: 10px 15px;
            margin: 10px;
            border-radius: 4px;
            color: #333;
        }

        .alert-warning {
            background-color: #fff3cd;
            border: 1px solid #ffeeba;
        }

        .btn {
            padding: 6px 12px;
            border-radius: 4px;
            color: white;
            background-color: #007bff;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="report-container">
        <!-- Export Options -->
        <div class="export-actions">
            <a href="javascript:exportReport('@reportId', 'excel')" class="student-link-excel">Excel</a>
            <span class="student-link-separator">|</span>
            <a href="javascript:exportReport('@reportId', 'word')" class="student-link-word">Word</a>
        </div>

        <!-- Report Viewer -->
        <div class="report-viewer">
            <iframe id="reportFrame" src="@Url.Action("StreamReport", "Report", new { id = reportId, format = "pdf", download = false })"></iframe>
        </div>
    </div>

    <input type="hidden" id="reportId" value="@reportId" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var isPdfSupported = navigator.mimeTypes && navigator.mimeTypes['application/pdf'];

            if (!isPdfSupported) {
                document.getElementById('reportFrame').style.display = 'none';
                var msg = document.createElement('div');
                msg.className = 'alert alert-warning';
                msg.innerHTML = 'Your browser does not support inline PDF viewing. ' +
                    '<a href="@Url.Action("StreamReport", "Report", new { id = reportId, format = "pdf", download = true })" class="btn">Download PDF</a>';
                document.querySelector('.report-viewer').appendChild(msg);
            }
        });

        function exportReport(reportId, format, download = true) {
            var url = '@Url.Action("StreamReport", "Report")?id=' + reportId + '&format=' + format;
            if (download || format !== 'pdf') {
                url += '&download=true';
                window.open(url, '_blank');
            } else {
                document.getElementById('reportFrame').src = url;
            }
        }

        window.addEventListener('beforeunload', function () {
            navigator.sendBeacon('@Url.Action("CleanupReport", "Report")', 'id=@reportId');
        });
    </script>
</body>
</html>
