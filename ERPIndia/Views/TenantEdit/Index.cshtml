@model TenantModel
@{
    ViewBag.Title = "School Profile";
}

<div class="container-fluid">
    <div class="page-header">
        <h2>School Profile</h2>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
