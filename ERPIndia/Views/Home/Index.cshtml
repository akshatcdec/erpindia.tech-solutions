<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header justify-content-between d-flex flex-wrap">
                <div class="card-title">
                    <i class="fas fa-user-plus me-2"></i>
                    <span id="formTitle">  Manage Customer</span>

                </div>
                <a href="javascript:void(0);" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="true" aria-controls="collapseExample" class="">
                    <i class="fa-solid fa-chevron-down fs-18 collapse-open"></i>
                    <i class="fa-solid fa-chevron-up collapse-close fs-18"></i>
                </a>
            </div>
            <div class="collapse show" id="collapseExample" style="">
                <div class="card-body">
                    <div class="card-body">
                        <form id="customerForm" novalidate>
                            <input type="hidden" id="customerId">
                            <div class="row">
                                <!-- First Column -->
                                <div class="col-md-4">
                                    <div class="form-group mb-3">
                                        <label for="firstName" class="form-label required-field">First Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Enter first name" required>
                                        </div>
                                        <span class="error-message" id="firstNameError"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="contact" class="form-label required-field">Contact</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                            <input type="tel" class="form-control" id="contact" name="contact" placeholder="10-digit phone number" required pattern="[0-9]{10}">
                                        </div>
                                        <span class="error-message" id="contactError"></span>
                                    </div>
                                </div>

                                <!-- Second Column -->
                                <div class="col-md-4">
                                    <div class="form-group mb-3">
                                        <label for="lastName" class="form-label required-field">Last Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Enter last name" required>
                                        </div>
                                        <span class="error-message" id="lastNameError"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="email" class="form-label required-field">Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                            <input type="email" class="form-control" id="email" name="email" placeholder="example@domain.com" required>
                                        </div>
                                        <span class="error-message" id="emailError"></span>
                                    </div>
                                </div>

                                <!-- Third Column -->
                                <div class="col-md-4">
                                    <div class="form-group mb-3">
                                        <label for="dob" class="form-label required-field">Date of Birth</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                            <input type="date" class="form-control" id="dob" name="dob" required>
                                        </div>
                                        <span class="error-message" id="dobError"></span>
                                    </div>
                                    <div class="form-group mb-3" style="margin-top:32px;">
                                        <div class="d-grid gap-2">
                                            <button type="submit" class="btn btn-primary" id="saveBtn">
                                                <i class="fas fa-save"></i> Save Customer
                                            </button>
                                            <button type="button" class="btn btn-secondary" id="resetBtn">
                                                <i class="fas fa-undo"></i> Reset
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div id="result" style="margin-top:20px; display:none;"></div>
                  <div class="col-12 mb-3">
                                    <h5 class="border-bottom pb-2"><i class="fas fa-address-card me-2"></i>Contact Information</h5>
                                </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="customerDatatable" class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Id</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Contact</th>
                                        <th>Email</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Data will be populated here -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>






<script>


    $(document).ready(function () {
        $("#customerForm").submit(function (e) {
            e.preventDefault();

            var customerData = {
                FirstName: $("#FirstName").val(),
                LastName: $("#LastName").val(),
                Contact: $("#Contact").val(),
                Email: $("#Email").val(),
                DateOfBirth: $("#DateOfBirth").val()
            };

            $.ajax({
                url: '@Url.Action("InsertCustomer", "Customer")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(customerData),
                success: function (response) {
                    var alertClass = response.success ? 'alert-success' : 'alert-danger';
                    $("#result").html('<div class="alert ' + alertClass + '">' + response.message + '</div>').fadeIn();

                    // Auto-hide after 2 seconds
                    setTimeout(function () {
                        $("#result").fadeOut();
                    }, 2000);

                    if (response.success) {
                        $("#customerForm")[0].reset(); // Clear form
                    }
                },
                error: function (xhr, status, error) {
                    $("#result").html('<div class="alert alert-danger">Error: ' + error + '</div>').fadeIn();

                    // Auto-hide after 2 seconds
                    setTimeout(function () {
                        $("#result").fadeOut();
                    }, 2000);
                }
            });
        });
    });
</script>
