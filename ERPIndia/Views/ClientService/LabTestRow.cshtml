@model ERPIndia.Models.InvoiceDetailModel

@using (Html.BeginCollectionItem("patientTestDetailList"))
{
    <div class="row testRow">
        <div class="col-xl-2 col-lg-6 col-12 form-group">
        </div>
        <div class="col-md-2 form-group">
            <div>
                @Html.DropDownListFor(model => model.ServiceId, new SelectList(ViewBag.Services, "Value", "Text"), new { style = "", @class = "form-control" })
            </div>
        </div>
        <div class="col-md-2 form-group">
            <div>
                @Html.TextBoxFor(model => model.Amount, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-4 form-group">
            <div>
                @Html.TextBoxFor(model => model.Remarks, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-2 form-group">
            <a href="#" class="deleteRow"><i class="fa fa-trash-o fa-2x"></i></a>
        </div>
    </div>
}
