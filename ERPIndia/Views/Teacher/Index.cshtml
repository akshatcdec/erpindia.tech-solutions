@model IEnumerable<ERPIndia.TeacherManagement.Models.TeacherBasic>
@{
    ViewBag.Title = ViewBag.ViewType == "Active" ? "Employees" : "Inactive Employees";
    var isActiveView = ViewBag.ViewType == "Active";
}
<link href="/Content/model.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <span class="bg-white avatar avatar-sm me-2 text-gray-7 flex-shrink-0">
                            <i class="fas fa-chalkboard-teacher fs-16"></i>
                        </span>
                        <h4 class="text-dark mb-0">@ViewBag.Title</h4>
                    </div>
                    <div>
                        @if (isActiveView)
                        {
                            <a href="@Url.Action("Create", "Teacher")" class="btn" style="background-color: #003366; color: white;">
                                <i class="fas fa-user-plus me-1"></i>Add Employee
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show d-flex align-items-center">
                        <i class="fas fa-check-circle me-2" style="font-size: 1.2em;"></i>
                        <div class="flex-grow-1">
                            @TempData["SuccessMessage"]
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle me-2" style="font-size: 1.2em;"></i>
                        <div class="flex-grow-1">
                            @TempData["ErrorMessage"]
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-bordered table-striped" id="teacherlist">
                        <thead>
                            <tr>
                                <th>Sr.</th>
                                <th align="center" style="text-align:center">Id</th>
                                <th align="center" style="text-align:center">Employee</th>
                                <th align="center" style="text-align:center">Father</th>
                                <th align="center" style="text-align:center">Designation</th>
                                <th align="center" style="text-align:center">Phone</th>
                                <th align="center" style="text-align:center">Date of Join</th>
                                <th align="center" style="text-align:center">Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int serialNo = 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@serialNo</td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            <span class="badge bg-secondary">
                                                @(string.IsNullOrEmpty(item.TeacherCode)
        ? ""
        : (item.TeacherCode.Length > 4
            ? item.TeacherCode.Substring(item.TeacherCode.Length - 4)
            : item.TeacherCode))
                                            </span>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.Photo))
                                            {
                                                <img src="@item.Photo" alt="Photo" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <span class="avatar avatar-sm rounded-circle bg-light text-dark me-2" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-user"></i>
                                                </span>
                                            }
                                            <div>
                                                <div class="fw-semibold">@item.FirstName @item.LastName</div>
                                               
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.FatherName))
                                        {
                                            <small class="text-muted">S/o @item.FatherName</small>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.DesignationName))
                                        {
                                            <span class="badge bg-info">@item.DesignationName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.PrimaryContactNumber))
                                        {
                                            <a href="tel:@item.PrimaryContactNumber" class="text-decoration-none">
                                                <i class="fas fa-phone-alt me-1"></i>@item.PrimaryContactNumber
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.DateOfJoining.HasValue)
                                        {
                                            @item.DateOfJoining.Value.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Status == "Active")
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else if (item.Status == "OnLeave")
                                        {
                                            <span class="badge bg-warning">On Leave</span>
                                        }
                                        else if (item.Status == "Resigned")
                                        {
                                            <span class="badge bg-secondary">Resigned</span>
                                        }
                                        else if (item.Status == "Terminated")
                                        {
                                            <span class="badge bg-danger">Terminated</span>
                                        }
                                        else if (item.Status == "Retired")
                                        {
                                            <span class="badge bg-info">Retired</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("Details", "Teacher", new { id = item.TeacherId })">
                                                        <i class="fa fa-eye me-2" style="color: #6c757d;"></i>
                                                        View Details
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("Edit", "Teacher", new { id = item.TeacherId })">
                                                        <i class="fas fa-edit me-2" style="color: #28a745;"></i>
                                                        Edit
                                                    </a>
                                                </li>
                                                @if (isActiveView)
                                                {
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <a class="dropdown-item text-danger" href="@Url.Action("Delete", "Teacher", new { id = item.TeacherId })"
                                                           onclick="return confirm('Are you sure you want to delete this employee?')">
                                                            <i class="fa-solid fa-trash-can me-2"></i>
                                                            Delete
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                                serialNo++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        // Initialize DataTable
        var table = $('#teacherlist').DataTable({
            "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
            "pageLength": 10,
            "order": [[0, "asc"]], // Order by Sr. No
            "dom": 'Blfrtip',
            "buttons": [
                {
                    extend: 'excel',
                    className: 'btn btn-sm btn-success',
                    text: '<i class="fas fa-file-excel"></i> Excel',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4, 5, 6]  // Exclude Action column
                    }
                },
                {
                    extend: 'pdf',
                    className: 'btn btn-sm btn-danger',
                    text: '<i class="fas fa-file-pdf"></i> PDF',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4, 5, 6]  // Exclude Action column
                    }
                },
                {
                    extend: 'print',
                    className: 'btn btn-sm btn-info',
                    text: '<i class="fas fa-print"></i> Print',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4, 5, 6]  // Exclude Action column
                    }
                }
            ],
            "columnDefs": [
                { "orderable": false, "targets": 7 } // Disable sorting on Action column
            ],
            "language": {
                "search": "Search employees:",
                "lengthMenu": "Show _MENU_ employees",
                "info": "Showing _START_ to _END_ of _TOTAL_ employees",
                "paginate": {
                    "first": "First",
                    "last": "Last",
                    "next": "Next",
                    "previous": "Previous"
                }
            }
        });
    });
</script>