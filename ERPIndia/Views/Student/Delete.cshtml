@model ERPIndia.StudentManagement.Models.StudentViewModel
@{
    ViewBag.Title = "Delete Student";
   
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <span class="bg-white avatar avatar-sm me-2 text-gray-7 flex-shrink-0">
                            <i class="ti ti-trash fs-16"></i>
                        </span>
                        <h4 class="text-dark mb-0">Delete Student</h4>
                    </div>
                    <div>
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <i class="ti ti-alert-triangle me-2"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this student record? This action cannot be undone.
                </div>

                <div class="row mb-4">
                    <div class="col-md-3 text-center">
                        @if (!string.IsNullOrEmpty(Model.Basic.Photo))
                        {
                            <img src="@Model.Basic.Photo" alt="Student Photo" class="img-thumbnail" style="max-height: 150px;" />
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center avatar avatar-xxl border border-dashed me-2 flex-shrink-0 text-dark">
                                <i class="ti ti-user fs-16"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-9">
                        <h3>@Model.Basic.FirstName @Model.Basic.LastName</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Basic.AdmsnNo)</dt>
                                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Basic.AdmsnNo)</dd>

                                    <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Basic.Class)</dt>
                                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Basic.ClassName) @Html.DisplayFor(model => model.Basic.SectionName)</dd>

                                    <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Basic.RollNo)</dt>
                                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Basic.RollNo)</dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Basic.Gender)</dt>
                                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Basic.Gender)</dd>

                                    <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Basic.Mobile)</dt>
                                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Basic.Mobile)</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="border-top pt-3">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Parents Information</h5>
                            <dl class="row">
                                <dt class="col-sm-5">Father's Name</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.Family.FName)</dd>

                                <dt class="col-sm-5">Father's Phone</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.Family.FPhone)</dd>

                                <dt class="col-sm-5">Mother's Name</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.Family.MName)</dd>

                                <dt class="col-sm-5">Mother's Phone</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.Family.MPhone)</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h5>Address</h5>
                            <dl class="row">
                                <dt class="col-sm-5">Current Address</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.Family.StCurrentAddress)</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                @using (Html.BeginForm("Delete", "Student", new { id = Model.Basic.StudentID , code = Model.Basic.SchoolCode }, FormMethod.Post, new { @class = "mt-4" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger btn-lg">Confirm Delete</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg ms-2">Cancel</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
